    {
      "name": "10. Topic Chat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"topic\": \"Summarizing the 2024 sustainability report for internal Q&A\",\n  \"message\": \"What were the biggest emission reductions?\",\n  \"model\": \"ollama:llama3\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/topic-chat",
          "host": ["{{base_url}}"],
          "path": ["api", "topic-chat"]
        },
        "description": "Multi-turn conversation with topic context. Returns supporting_points, follow_up_questions, and suggested_resources."
      },
      "response": []
    },
    {
      "name": "11. Topic Chat (Continue Conversation)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"topic\": \"Summarizing the 2024 sustainability report for internal Q&A\",\n  \"message\": \"What were the cost savings?\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"What were the biggest emission reductions?\"\n    },\n    {\n      \"role\": \"assistant\",\n      \"content\": \"The largest reductions came from electrifying the delivery fleet...\"\n    }\n  ],\n  \"model\": \"ollama:llama3\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/topic-chat",
          "host": ["{{base_url}}"],
          "path": ["api", "topic-chat"]
        },
        "description": "Continue previous conversation by including messages array."
      },
      "response": []
    }
