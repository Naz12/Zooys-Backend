      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"I absolutely love the new dashboard! It's intuitive and fast.\",\n  \"task\": \"sentiment\",\n  \"model\": \"ollama:llama3\"\n}"
