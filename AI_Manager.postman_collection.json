{
  "info": {
    "name": "AI Manager Microservice",
    "description": "Complete API collection for AI Manager - Text processing, summarization, code review, translation, and more",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-KEY",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Get Available Models",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/models",
          "host": ["{{base_url}}"],
          "path": ["api", "models"]
        },
        "description": "Retrieve list of all available AI models with their keys, vendors, and display names."
      },
      "response": []
    },
    {
      "name": "2. Summarize Text",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"The new software update includes improved performance, enhanced security features, and a redesigned user interface. Users can now customize dashboards and access real-time analytics. The update also fixes bugs reported in the previous version and supports multiple languages.\",\n  \"task\": \"summarize\",\n  \"model\": \"ollama:llama3\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/process-text",
          "host": ["{{base_url}}"],
          "path": ["api", "process-text"]
        },
        "description": "Create concise summary with key points from long text."
      },
      "response": []
    },
    {
      "name": "3. Code Review",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"<?php\\nclass UserController extends Controller {\\n  public function store($request) {\\n    $user = new User;\\n    $user->name = $request->name;\\n    $user->email = $request->email;\\n    $user->password = $request->password;\\n    $user->save();\\n    return response()->json($user);\\n  }\\n}\",\n  \"task\": \"code-review\",\n  \"model\": \"gpt-4o\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/process-text",
          "host": ["{{base_url}}"],
          "path": ["api", "process-text"]
        },
        "description": "Analyze code for security issues, bugs, and improvement suggestions."
      },
      "response": []
    },
    {
      "name": "4. Question Answering",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Context: Laravel is a PHP framework for web development. It uses MVC architecture and includes features like Eloquent ORM, Blade templating, and Artisan CLI.\\nQuestion: What is Eloquent ORM in Laravel?\",\n  \"task\": \"qa\",\n  \"model\": \"ollama:llama3\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/process-text",
          "host": ["{{base_url}}"],
          "path": ["api", "process-text"]
        },
        "description": "Answer questions based on provided context."
      },
      "response": []
    },
    {
      "name": "5. Translation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Bonjour, comment allez-vous?\",\n  \"task\": \"translate\",\n  \"model\": \"gpt-4o\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/process-text",
          "host": ["{{base_url}}"],
          "path": ["api", "process-text"]
        },
        "description": "Translate text between languages."
      },
      "response": []
    },
    {
